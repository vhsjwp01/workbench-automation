# Copyright ©1997-1998, BEA Systems, Inc., all rights reserved.
#==============================================================================


#------------------------------------------------------------------------------
*RESOURCES
IPCKEY          ##IPCKEY##

DOMAINID	KIXD 	# <REGION>
MASTER          KIXR	# <SUBREGION>
MODEL           SHM
MAXACCESSERS    100
MAXSERVERS      50
MAXSERVICES     10000
LDBAL           N
BLOCKTIME       30

#------------------------------------------------------------------------------
*MACHINES
"##MACHINE##"
   LMID=KIXR
   APPDIR="##APPDIR##"
   TUXDIR="##TUXDIR##"
   TUXCONFIG="##APPDIR##/config/tux/tuxconfig"
   ENVFILE="##APPDIR##/config/tux/envfile"
   ULOGPFX="##APPDIR##/LOGS/log/ULOG"
   MAXWSCLIENTS=20
   TLOGDEVICE="##APPDIR##/sysfile/TLOG"

#------------------------------------------------------------------------------
*GROUPS
DEFAULT:    LMID=KIXR
# Applicative groups
TCP00       LMID=KIXR
            GRPNO=1

GRP00
   GRPNO=10
   ENVFILE="##APPDIR##/config/tux/envfile"

GRP01 
   GRPNO=11
   ENVFILE="##APPDIR##/config/tux/envfile"

GRP02 
   GRPNO=12
   ENVFILE="##APPDIR##/config/tux/envfile"
   TMSNAME="TMS_UDB"
   TMSCOUNT=2
   OPENINFO="UDB_XA:db=##DB2BASE##,uid=##DBUSER##,pwd=##DBPASSWD##,tpm=tuxedo"

#------------------------------------------------------------------------------
*SERVERS
ARTTCPL     SRVGRP=TCP00
            SRVID=101
            CLOPT=" -- -M 4 -m 1 -L //##MACHINE##:##PRIVATEADDR## -n //##MACHINE##:##NETWORKADDR## +H -1 -D"

ARTADM      SRVGRP=GRP01
            SRVID=10
            MIN=1 MAX=1
            SEQUENCE=1
            CLOPT="-o ##APPDIR##/LOGS/sysout/stdout_adm -e ##APPDIR##/LOGS/sysout/stderr_adm -r --"

ARTCNX      SRVGRP=GRP01
            SRVID=15
            CONV=Y
            MIN=1 MAX=1 RQADDR=QCNX015 REPLYQ=Y
            CLOPT="-o ##APPDIR##/LOGS/sysout/stdout_cnx -e ##APPDIR##/LOGS/sysout/stderr_cnx -r --"

ARTSTRN_UDB SRVGRP=GRP02
            SRVID=20
            CONV=Y
            MIN=1 MAX=1 RQADDR=QKIX110 REPLYQ=Y
            CLOPT="-o ##APPDIR##/LOGS/sysout/stdout_strn -e ##APPDIR##/LOGS/sysout/stderr_strn -r -- -s KIXR -l SIMPAPP"
            

*SERVICES
DEFAULT:  SVCTIMEOUT=0 TRANTIME=80
*ROUTING
